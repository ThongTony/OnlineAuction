@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>List User</h1>
                <h3><a asp-action="logout" asp-controller="login" asp-area="admin"></a>Log Out</h3>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <form method="Post" asp-action="index" asp-controller="listuser">
                        <div class="table-responsive-lg">
                            <table id="example2" class="table table-striped table-borderless table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Id</th>
                                        <th>FullName</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Username</th>
                                        @*//<th>Password</th>*@
                                        <th>Status</th>
                                        <th>Isblocked</th>
                                        <th>Created</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in ViewBag.Accounts)
                                    {
                                        <tr>
                                            <td>@account.Id</td>
                                            <td>@account.Fullname</td>
                                            <td>@account.Address</td>
                                            <td>@account.Email</td>
                                            <td>@account.Username</td>
                                            @*<td>@account.Password</td>*@
                                            <td>@(account.Status ? "active" : "unactive")</td>
                                            <td>@(account.IsBlocked ? "blocked" : "unblock")</td>
                                            <td>@account.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a  asp-area="admin" asp-controller="listuser" asp-action="blocked" asp-route-id="@account.Id">Blocked</a>
                                                <br />
                                                <a asp-area="admin" asp-controller="listuser" asp-action="unlock" asp-route-id="@account.Id">UnBlock</a>
                                                <br />
                                                <a asp-area="admin" asp-controller="listuser" asp-action="delete" asp-route-id="@account.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->