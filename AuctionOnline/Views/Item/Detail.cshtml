                        decimal availableBidPrice = 0;

                        var latestSessionBid = Model.ItemVM.Bids.OrderByDescending(x => x.BidSession).FirstOrDefault();

                        if (latestSessionBid != null)
                        {
                            var latestCurrentPriceBid = Model.ItemVM.Bids.Where(x => x.BidSession == latestSessionBid.BidSession).OrderByDescending(x => x.CurrentBidPrice).FirstOrDefault();

                            if (latestCurrentPriceBid == null)
                            {
                                availableBidPrice = Model.ItemVM.MinimumBid.Value;
                            }
                            else
                            {
                                if (!latestCurrentPriceBid.IsWinned)
                                {
                                    currentPrice = latestCurrentPriceBid.CurrentBidPrice;
                                    availableBidPrice = latestCurrentPriceBid.CurrentBidPrice + Model.ItemVM.BidIncrement;
                                }
                                else
                                {
                                    currentPrice = 0;
                                    availableBidPrice = Model.ItemVM.MinimumBid.Value;
                                }
                            }
                        }
                        else
                        {
