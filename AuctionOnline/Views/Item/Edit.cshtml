@model AuctionOnline.Models.Category;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h3>Edit Category</h3>
    <form asp-controller="category" asp-action="edit" method="post">
        <table id="">
            <tr>
                <td>Name</td>
                <td><input type="text" asp-for="Name" /></td>
            </tr>
            <tr>
                <td>Categories</td>
                <td>
                    <select type="text" asp-for="ParentId">
                        @foreach (var categories in ViewBag.Categories)
                        {
                            <option>@categories.Name</option>

                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td colspan="2">
                    <input type="submit" value="Save" />
                    <input type="hidden" asp-for="Id" />
                </td>
            </tr>

        </table>
    </form>
    <a asp-controller="category" asp-action="index">Back to Category View</a>
</body>
</html>
