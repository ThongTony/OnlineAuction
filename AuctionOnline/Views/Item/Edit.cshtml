@model AuctionOnline.ViewModels.LayoutViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="container col-md_12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemVM.Title" class="control-label"></label>
                <input asp-for="ItemVM.Title" class="form-control" />
                <span asp-validation-for="ItemVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.SelectedCategoryIds" class="control-label">Category(ies)</label>
                <select asp-for="ItemVM.SelectedCategoryIds" asp-items="Model.CategoryVM.Categories" multiple="multiple">
                    <option value="">Choose a category</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.Description" class="control-label"></label>
                <input asp-for="ItemVM.Description" class="form-control" />
                <span asp-validation-for="ItemVM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.Price" class="control-label"></label>
                <input asp-for="ItemVM.Price" class="form-control" />
                <span asp-validation-for="ItemVM.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.Photo" class="control-label"></label>
                <input asp-for="ItemVM.Photo" />
                <span asp-validation-for="ItemVM.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.Document" class="control-label"></label>
                <input asp-for="ItemVM.Document" />
                <span asp-validation-for="ItemVM.Document" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemVM.CreatedAt" class="control-label"> Create Date:&nbsp;</label>
                <input asp-for="ItemVM.CreatedAt" class="form-control" type="hidden" />
                <span>@DateTime.Now</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" /> Sell an item
                <input type="hidden" asp-for="ItemVM.Id" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <b>Edit @Html.DisplayFor(model => model.ItemVM.Title)</b>
            </div>
            <div class="panel-body">
                <form class="ajax-form" asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-heading"></i>
                        </span>
                        <input asp-for="ItemVM.Title" placeholder="Title" type="text" size="25" style="text-align:center" class="form-control">
                        <span asp-validation-for="ItemVM.Title" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-th-list"></i>
                        </span>
                        <select asp-for="ItemVM.SelectedCategoryIds" asp-items="Model.CategoryVM.Categories" multiple="multiple" class="form-control">
                            <option value="">Choose a category</option>
                        </select>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input asp-for="ItemVM.Description" placeholder="Description" type="text" size="25" style="text-align:center" class="form-control">
                        <span asp-validation-for="ItemVM.Description" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-dollar-sign"></i>
                        </span>
                        <input asp-for="ItemVM.Price" placeholder="Price" type="text" size="25" style="text-align:center" class="form-control">
                        <span asp-validation-for="ItemVM.Price" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-image"></i>
                        </span>
                        <input asp-for="ItemVM.Photo" value="Upload a photo">
                        <span asp-validation-for="ItemVM.Photo" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-file-alt"></i>
                        </span>
                        <input asp-for="ItemVM.Document" value="Upload a document">
                        <span asp-validation-for="ItemVM.Document" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-calendar-alt"></i>
                        </span>
                        <label asp-for="ItemVM.CreatedAt" class="form-control"></label>
                        <input asp-for="ItemVM.CreatedAt" value="@Html.DisplayFor(model => model.ItemVM.CreatedAt)>
                    </div>
                    <div class="xs-pad text-center">
                        <button type="submit" class="btn btn-default custom">Save</button>
                        <input type="hidden" asp-for="ItemVM.Id" />
                        @*<div class="spacer"></div>*@
                        <a asp-action="Index">Cancel</a>
                        <hr>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-default custom">
                            <i style="margin-right:5px" class="fas fa-store-alt"></i>
                            Back to Home
                        </a>
                    </div>
                </form>
            </div>
            <div>
                <a asp-action="Create">Back to List</a>
            </div>
        </div>
    </div>
</div>