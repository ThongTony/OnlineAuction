@model AuctionOnline.Models.Category;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Category Add</h3>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>ParentId</th>
            <th>Date Creation</th>
            <th>Actions</th>
        </tr>
        @foreach (var category in ViewBag.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.ParentId</td>
                <td>@category.CreatedAt</td>
                <td>
                    <a asp-controller="category" asp-action="add">Add a new category</a>
                    <br />
                    <a asp-controller="category" asp-action="edit" asp-route-id="@category.Id">Edit</a>
                    <br />
                    <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                    <br />
                    <a asp-controller="category" asp-action="adminaddchild" asp-route-id="@category.Id">Create a children category</a>
                    <br />
                    <a asp-controller="item" asp-action="demoadd" asp-route-id="@category.Id">Add a related Item</a>
                    <br />
                </td>
            </tr>
            <br />
        }
    </table>
</body>
</html>
