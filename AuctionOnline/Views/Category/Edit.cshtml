@model AuctionOnline.ViewModels.LayoutViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Edit Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryVM.Id" />
                <div class="form-group">
                    <label asp-for="CategoryVM.Name" class="control-label"></label>
                    <input asp-for="CategoryVM.Name" class="form-control" />
                    <span asp-validation-for="CategoryVM.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label @*asp-for="ParentId"*@ class="control-label">Parent Name</label>
                    <select asp-for="CategoryVM.ParentId" class="form-control" asp-items="Model.CategoryVM.Categories">
                        <option value="">Select if it's a new category</option>
                    </select>
                    <span asp-validation-for="CategoryVM.ParentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
</body>
</html>
