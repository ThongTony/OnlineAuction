@model AuctionOnline.ViewModels.LayoutViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryVM.Name" class="control-label"></label>
                <input asp-for="CategoryVM.Name" class="form-control" />
                <span asp-validation-for="CategoryVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryVM.ParentId" class="control-label"></label>
                <select asp-for="CategoryVM.ParentId" class="form-control" asp-items="Model.CategoryVM.Categories">
                    <option value="">Choose category</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

