@using Microsoft.AspNetCore.Http;
@model AuctionOnline.ViewModels.LayoutViewModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $('#ItemName').autocomplete({
                source: '/Item/Searchkeyword'

            });
        });
    </script>
</head>
<body>
    <div id="search-block" style="margin-bottom:10px" class="panel panel-default">
        <div class="panel-body">
            <form method="post" asp-action="searchkeyword" asp-controller="item">
                <div class="col-sm-2 hidden-xs hidden-sm">

                    <select name="cat_id" class="form-control">
                        <option value=""><< Tất cả >></option>

                        @*@foreach (var cate in Model.CategoriesVM)
                            {
                                if (cate.Children.Any())
                                {
                                    <option>
                                        @cate.Name
                                    </option>
                                    @await Html.PartialAsync("~/Views/Shared/Components/Search", cate.Children)
                                }
                                else
                                {
                                    <option>@cate.Name</option>
                                }
                            }*@
                    </select>
                </div>
                <div class="col-md-2 visible-md-block">
                    <select name="price" class="form-control">
                        <option value="0">- Chọn mức giá -</option>
                        <option value="1">Duới 1 triệu</option>
                        <option value="2">Từ 1 tới 2 triệu</option>
                        <option value="3">Trên 2 triệu</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" name="keyword" placeholder="Tìm sản phẩm" class="form-control" size="90" id="ItemName">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-2" style="align-self: end">
                    <div class="col-md-6">
                        <a style="margin-left: 40px" asp-controller="Item" asp-action="ListInShop" asp-route-id="@Context.Session.GetInt32("checkiduser")">
                            <btn class="btn btn-warning">Go To Shop</btn>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Account" asp-action="ListUser" style="margin-left: 40px">
                            <btn class="btn btn-info">Other Shops</btn>
                        </a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>
</html>