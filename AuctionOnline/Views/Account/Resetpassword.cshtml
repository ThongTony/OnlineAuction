
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--new layout-->
<div class="row">
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-body">
                <form method="post" asp-action="Resetpassword" asp-controller="account">
                    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
                        <div class="panel panel-default">
                            <div class="panel-heading">Reset Password</div>
                            <div class="panel-body">
                                <p align="center">
                                </p>
                                <div class="xs-pad">
                                    <input type="password" name="password" placeholder="Mật Khẩu" class="form-control">
                                </div>
                                <div class="xs-pad">
                                    <input  type="password" name="confirmpassword" placeholder="Xác Nhận Mật Khẩu" class="form-control">
                                </div>
                                <div class="xs-pad text-center">
                                    <button type="submit" class="btn btn-default custom">Update Password</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>