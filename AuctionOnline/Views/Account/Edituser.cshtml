
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <b>Edit </b>
            </div>
            <div class="panel-body">
                <form class="ajax-form"  enctype="multipart/form-data" method="post" asp-action="Edituser" asp-controller="Account">
                    <div class="text-danger"></div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-heading"></i>
                        </span>
                        <input placeholder="Title" type="text" size="25" style="text-align:center" class="form-control">
                        <span  class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-th-list"></i>
                        </span>
                        <select  multiple="multiple" class="form-control">
                            <option >Choose a category</option>
                        </select>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input  placeholder="Description" type="text" size="25" style="text-align:center" class="form-control">
                        <span  class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input  placeholder="Minimum Bid" type="number" size="25" style="text-align:center" class="form-control">
                        <span  class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-image"></i>
                        </span>
                        <input  value="Upload a photo">
                        <span  class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-file-alt"></i>
                        </span>
                        <input  value="Upload a document">
                        <span  class="text-danger"></span>
                    </div>
                    <div class="xs-pad text-center">
                        <button type="submit" class="btn btn-default custom">Save</button>
                        @*<div class="spacer"></div>*@
                        <br />
                        <br />
                        <a asp-action="Index" asp-controller="Item">Cancel</a>
                        <hr>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-default custom">
                            <i style="margin-right:5px" class="fas fa-store-alt"></i>
                            Back to Home
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>