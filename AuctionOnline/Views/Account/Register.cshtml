
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <style>
        .avatar {
            width: 64px;
            height: 64px;
            border-radius: 32px;
            overflow: hidden;
            margin-right: 10px
        }
    </style>
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-heading">Đăng ký</div>
            <div class="panel-body">
                <form action="https://sohot.vn/user/action/register" method="post">

                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input placeholder="Chọn tên truy cập" name="username" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input placeholder="Chọn email" name="email" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input placeholder="Mật khẩu" name="password" type="password" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input placeholder="Xác nhận mật khẩu" name="password_v" type="password" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad text-center">
                        <button type="submit" class="btn btn-default custom">Đăng ký</button>
                    </div>
                    <input type="hidden" name="submit" value="register">
                </form>
            </div>
        </div>
    </div>
</div>