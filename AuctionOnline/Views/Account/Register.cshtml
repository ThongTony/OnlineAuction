@model AuctionOnline.ViewModels.LayoutViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <style>
        .avatar {
            width: 64px;
            height: 64px;
            border-radius: 32px;
            overflow: hidden;
            margin-right: 10px
        }
    </style>
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-heading">Đăng ký</div>
            <div class="panel-body">
                <form method="post" asp-action="Register">
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input placeholder="Tên đầy đủ" asp-for="AccountVM.Fullname" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-user-circle"></i>
                        </span>
                        <input placeholder="Tên truy cập" asp-for="AccountVM.Username" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input placeholder="Mật khẩu" asp-for="AccountVM.Password" type="password" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input placeholder="Email" asp-for="AccountVM.Email" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </span>
                        <input placeholder="Phone" asp-for="AccountVM.PhoneNumber" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                        </span>
                        <input placeholder="Địa Chỉ" asp-for="AccountVM.Address" type="text" size="25" style="text-align:center" class="form-control">
                    </div>
                    <div class="xs-pad text-center">
                        <button type="submit" class="btn btn-default custom">Đăng ký</button>
                    </div>
                    <input type="hidden" name="submit" value="register">
                </form>
            </div>
        </div>
    </div>
</div>

