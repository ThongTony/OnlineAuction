@model AuctionOnline.ViewModels.LayoutViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div style="margin:auto;min-width:300px;max-width:400px" class="center">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <b>Edit @Html.DisplayFor(model => model.AccountVM.Fullname)</b>
            </div>
            <div class="panel-body">
                <form class="ajax-form" enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="Account">
                    <div class="text-danger"></div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input asp-for="AccountVM.Fullname" placeholder="@Model.AccountVM.Fullname" size="25" style="text-align:center" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-key"></i>
                        </span>
                        <input asp-for="AccountVM.Password" type="password" size="25" style="text-align:center" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-map-marked"></i>
                        </span>
                        <input placeholder="@Model.AccountVM.Address" asp-for="AccountVM.Address" type="text" size="25" style="text-align:center" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-image"></i>
                        </span>
                        <input class="btn" asp-for="AccountVM.Photo" value="Upload a photo">
                        <span asp-validation-for="AccountVM.Photo" class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-image"></i>
                        </span>
                        <input value="Upload a photo">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="far fa-envelope"></i>
                        </span>
                        <input placeholder="@Model.AccountVM.Email" asp-for="AccountVM.Email" type="email" size="25" style="text-align:center" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-mobile-alt"></i>
                        </span>
                        <input placeholder="@Model.AccountVM.PhoneNumber" asp-for="AccountVM.PhoneNumber" type="text" size="25" style="text-align:center" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                    <div class="xs-pad text-center">
                        <button type="submit" class="btn btn-default custom">Save</button>
                        <input type="hidden" asp-for="AccountVM.Id" />
                        <br />
                        <a asp-action="AccountList">Cancel</a>
                        <hr>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-default custom">
                            <i style="margin-right:5px" class="fas fa-store-alt"></i>
                            Back to Home
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>