                                        </div>

                                        <div class="woocommerce-title-metas">
                                            <h3 class="archive-product-title">
                                                <a asp-controller="item" asp-action="details" asp-route-id="@item.Id">
                                                    @item.Title
                                                </a>
                                            </h3>
                                            <div class="details-container">
                                                <div class="details-price-container details-item">
