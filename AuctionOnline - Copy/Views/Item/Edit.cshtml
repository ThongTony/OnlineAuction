@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page content -->
@model AuctionOnline.Models.Item
@{
    var item = ViewBag.Item;
}
<div id="primary" class="no-padding content-area no-sidebar">
    <div class="container">
        <main id="main" class="col-md_12 site-main main-content">
            <article id="post-11" class="post-11 page type-page status-publish hentry">
                <div class="entry-content">
                    <div class="vc_row wpb_row vc_row-fluid vc_custom_1567511231494">
                        <div class="wpb_column vc_column_container vc_col-sm-12">
                            <div class="vc_column-inner">
                                <div class="wpb_wrapper">
                                    <div class="woocommerce">
                                        <div class="woocommerce-notices-wrapper"></div>
                                        <div class="u-columns col2-set" id="customer_login">
                                            <div class="u-column1 col-1">
                                                <h2>Edit</h2>

                                                <form class="woocommerce-form woocommerce-form-login login" method="post" asp-controller="item" asp-action="edit">
                                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                                        <label for="title">@item.Title</label>
                                                    </p>
                                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                                        <label for="description">Description</label>
                                                        <textarea class="woocommerce-Input woocommerce-Input--text input-text" asp-for="Description" rows="5" cols="20" /></textarea>
                                                    </p>
                                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                                        <label for="price">Photo&nbsp;<span class="required">*</span></label>
                                                        <input type="file" id="myFile" class="woocommerce-Input woocommerce-Input--text input-text" name="filename" asp-for="Photo" />
                                                    </p>
                                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                                        <label for="price">Bid Increment&nbsp;<span class="required">*</span></label>
                                                        <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" asp-for="BidIncrementDefinition" />
                                                    </p>

                                                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                                        <label for="price">Document</label>
                                                        <input type="file" id="myFile" class="woocommerce-Input woocommerce-Input--text input-text" name="filename" asp-for="Document" />
                                                    </p>
                                                    <p class="form-row">
                                                        <button type="submit" class="woocommerce-button button woocommerce-form-login__submit" value="Save">Save changes</button>
                                                        <input type="hidden" asp-for="Id" />
                                                    </p>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div><!-- .entry-content -->

                <footer class="entry-footer">
                </footer><!-- .entry-footer -->
            </article><!-- #post-## -->

        </main>
    </div>
</div>